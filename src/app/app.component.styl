.wrapper
  display grid
  grid-template-columns repeat(6, minmax(0, 1fr))
  grid-template-rows repeat(5, 1fr)
  height 100%
  grid-gap 10px
  place-items stretch stretch

  *
    //border 1px solid white
    display grid
    place-items center center

app-time-widget, app-offline-widget
  grid-column 3 / 5
  grid-row 3 / 4

app-budget-balance-widget
  grid-column 1
  grid-row 1

app-budget-today-widget
  grid-column 1
  grid-row 2

app-budget-tomorrow-widget
  grid-column 1
  grid-row 3

app-budget-month-widget
  grid-column 1
  grid-row 4

app-budget-card-balance-widget
  grid-column 1
  grid-row 5

